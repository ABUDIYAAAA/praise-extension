{
  "manifest_version": 3,
  "name": "PRaise",
  "version": "1.0.0",
  "description": "Track your GitHub activity and celebrate your progress with PRaise ðŸŽ‰",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "Open PRaise"
  },

  "permissions": ["storage", "activeTab", "scripting"],

  "host_permissions": ["*://*/*"],

  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
