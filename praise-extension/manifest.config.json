{
  "manifest_version": 3,
  "name": "PRaise",
  "version": "1.0.0",
  "description": "Chrome extension providing grattification for contributors.",
  "permissions": ["storage", "sidePanel", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "js": ["src/background/index.js"],
      "matches": ["https://github.com/*"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://localhost:5175/*",
    "http://localhost:5000/*",
    "https://github.com/*"
  ]
}
